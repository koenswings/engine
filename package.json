{
  "name": "engine",
  "version": "1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install_packages": "pnpm install --frozen-lockfile",
    "start": "tsc && node dist/src/index.js",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'tsc && node dist/src/index.js'",
    "devtest": "tsc --build --clean && tsc && mocha --bail --reporter list 'dist/test/*.js' --exit",
    "sync": "rsync -av --exclude='node_modules' --exclude='.git' --exclude='dist' --exclude='scratchpad' --exclude='.vscode' --exclude='.pnpm-store' ./ pi@raspberrypi.local:/home/pi/engine",
    "ptest": "tsc && node dist/src/test.js",
    "test3": "mocha --config x.mocharc.json --es-module-specifier-resolution=node --reporter list 'test/*.ts'",
    "test2": "mocha --config x.mocharc.json --import=tsx --reporter list 'test/*.ts'",
    "test1": "mocha --require ts-node/register --extensions ts,tsx --loader ts-node/esm --reporter list 'test/*.ts' --exit",
    "clean": "tsc --build --clean",
    "test": "tsc --build --clean && tsc && mocha --reporter list 'dist/test/*.js' --exit"
  },
  "keywords": [],
  "author": "Koen Swings",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.5.7",
    "chai": "^5.1.1",
    "mocha": "^10.4.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.3.0-dev.20230830"
  },
  "dependencies": {
    "@homebridge/ciao": "^1.2.0",
    "chokidar": "^3.6.0",
    "fast-deep-equal": "^3.1.3",
    "lib0": "^0.2.88",
    "lodash": "^4.17.21",
    "mdns": "^2.7.2",
    "netmask": "^2.0.2",
    "network-interfaces-listener": "^1.0.1",
    "node-dns-sd": "^1.0.1",
    "p-event": "^6.0.1",
    "tsx": "^3.12.10",
    "usb": "^2.11.0",
    "valtio": "^1.13.2",
    "valtio-yjs": "^0.5.1",
    "ws": "^8.16.0",
    "y-protocols": "^1.0.6",
    "yaml": "^2.3.4",
    "yjs": "^13.6.12",
    "zx": "^7.2.3"
  }
}
